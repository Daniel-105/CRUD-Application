@model List<Category>

<div class="container">
    <div class="row">
        <h1 class="col-9">Category List</h1>
        <a asp-controller="Category" asp-action="Create" class="col-3 btn btn-dark">
            <i class="bi bi-plus-circle"></i>
            Create New Category
        </a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Category Name</th>
            <th scope="col">Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(u => u.DisplayOrder).ToList())
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td class="text-center">
                    <div class="btn-group ">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-3">Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-3">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>