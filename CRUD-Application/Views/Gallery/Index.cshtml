@model List<Gallery>




<div class="row py-5">
    <div class="col-lg-12 mx-auto">
        <div class="text-white p-5 shadow-sm rounded banner">
            <div class="banner-container">
                <h1 class="display-4">Demo Tumblr</h1>
                <div class="btn-group">
                    <a asp-controller="Gallery" asp-action="Create" class="btn btn-primary">Create</a>
                </div>
            </div>
        </div>
    </div>
</div>





<div class="container-fluid">
    <div class="px-lg-5">
        <div class="row ">
            @foreach (var item in Model)
            {
                <!-- Gallery item -->
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                    <div class="bg-white rounded shadow-sm">
                        <img src="@item.ImageURL" alt="" class="img-fluid card-img-top">
                        <div class="p-4">
                            <h5> <a href="#" class="text-dark">@item.UserName</a></h5>
                            <p class="small text-muted mb-0">@item.Description</p>
                            <div class="d-flex align-items-center justify-content-center rounded-pill bg-light px-3 py-2 mt-4">
                                <a asp-controller="Gallery" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary rounded-5">Update</a>
                                <a asp-controller="Gallery" asp-action="Edit" class="btn btn-danger rounded-5">Delete</a>
                                @*<div class="badge badge-danger px-3 rounded-pill font-weight-normal">New</div>*@
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End -->
            }
        </div>
    </div>
</div>
