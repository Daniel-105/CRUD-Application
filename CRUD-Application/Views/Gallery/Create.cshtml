@model Gallery


<form method="post" id="create-form" onsubmit="return validateForm()" enctype="multipart/form-data" class="border p-3">
    <input asp-for="@Model.ImageURL" hidden />
    <input asp-for="@Model.Id" hidden />


    <h1>Edit Your photo Details</h1>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" type="text" class="form-control">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div id="userNameError" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ImageURL"></label>
        <input asp-for="ImageURL" name="file" type="file" class="form-control">
        <span asp-validation-for="ImageURL" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateUploaded"></label>
        <input asp-for="DateUploaded" type="date" class="form-control">
        <span asp-validation-for="DateUploaded" class="text-danger"></span>
    </div>


    <div class="btn-group mt-3">
        <button type="submit" class="btn btn-success">Create Record</button>
        <a asp-controller="Gallery" asp-action="Index" class="btn btn-secondary">Back to Categories</a>
    </div>
</form>

